[
  {
    "name": "bastion",
    "image": "${IMAGE_PREFIX}-bastion:prd",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${BASTION_LOG_GROUP}",
        "awslogs-region": "${REGION}",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "command": [
      "tail", "-f", "/dev/null"
    ]
  }
]
